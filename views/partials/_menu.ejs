<div class="container">
    <div class="row">
      <div class="col-sm">
        <h3>Salads</h3>
        <% menuObj.forEach(function(item) { %>
        <% if (item.category === 'salad') { %>
        <section class="salads">
          <article id="container-<%= item.id %>" class="salads">
            <header>
              <img class="item-photo" src="<%= item.image_url %>"></img>
              <h3 id="item-<%= item.id %>-name" class="item-name"><%= item.name %></h3>
              <p id="item-<%= item.id %>-price" class="item-price"><%= item.price %></p>
            </header>
            <p class="item-text"><%= item.description %></p>
            <footer>
                <button type="submit" class="btn btn-info" id="<%= item.id %>">Add to Cart</button>
            </footer>
          </article>
        </section>
        <% } %>
        <% }) %>
      </div>

      <div class="col-sm">
